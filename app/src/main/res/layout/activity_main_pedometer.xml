<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/stepCountContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pedometer_container_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/pedometerIconButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/walking_icon01"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pedometerContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pedometerIconButton"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pedometer_stepcount_container_bg"
                android:padding="5dp"
                app:layout_constraintBottom_toTopOf="@+id/materialDivider"
                app:layout_constraintEnd_toStartOf="@+id/changeTargetAfterTakingInputButton"
                app:layout_constraintStart_toStartOf="@+id/materialDivider">

                <TextView
                    android:id="@+id/stepCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_3"
                    android:text="Steps Count  -"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/numberOfSteps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_3"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:maxLength="5"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/stepCountText"
                    app:layout_constraintEnd_toStartOf="@+id/changeTargetAfterTakingInputButton"
                    app:layout_constraintStart_toEndOf="@+id/stepCountText"
                    app:layout_constraintTop_toTopOf="@+id/stepCountText" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/changeTargetAfterTakingInputButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/pedometer_target_button_bg"
                android:fontFamily="@font/font_3"
                android:text="Change Target"
                android:textColor="@color/white"
                android:textSize="8sp"
                app:layout_constraintBottom_toTopOf="@+id/materialDivider"
                app:layout_constraintEnd_toEndOf="@+id/materialDivider" />

            <EditText
                android:id="@+id/changeTargetInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/pedometer_target_input_bg"
                android:fontFamily="@font/font_3"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="5"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/Dark3"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/materialDivider"
                app:layout_constraintStart_toEndOf="@+id/constraintLayout7"
                app:layout_constraintTop_toBottomOf="@+id/materialDivider" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout7"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/pedometer_distance_container_bg"
                android:padding="10dp"
                app:layout_constraintEnd_toStartOf="@+id/pedometerProgressBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialDivider">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance Covered - "
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/coveredDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/font_3"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView5"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/materialDivider"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginRight="10dp"
                app:layout_constraintBottom_toTopOf="@+id/stepTarget"
                app:layout_constraintEnd_toStartOf="@+id/pedometerProgressBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/pedometerProgressBar" />

            <TextView
                android:id="@+id/stepTarget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/font_3"
                android:textColor="@color/IconThemedColor4"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/pedometerProgressBar"
                app:layout_constraintStart_toStartOf="@+id/pedometerProgressBar"
                app:layout_constraintTop_toBottomOf="@+id/pedometerProgressBar" />

            <ProgressBar
                android:id="@+id/pedometerProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:foregroundGravity="center"
                android:background="@drawable/pedometer_progress_bg"
                android:padding="10dp"
                android:progressDrawable="@drawable/pedometer_progress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/stopStartPedometerButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:tint="@color/white"
                android:padding="5dp"
                android:foregroundGravity="center"
                android:src="@drawable/play_icon02"
                app:layout_constraintBottom_toBottomOf="@+id/pedometerProgressBar"
                app:layout_constraintEnd_toEndOf="@+id/pedometerProgressBar"
                app:layout_constraintStart_toStartOf="@+id/pedometerProgressBar"
                app:layout_constraintTop_toTopOf="@+id/pedometerProgressBar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>