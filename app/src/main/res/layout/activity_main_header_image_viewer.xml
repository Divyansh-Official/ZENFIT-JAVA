                    <!--                    app:layout_constraintStart_toStartOf="parent"-->
                    <!--                    app:layout_constraintTop_toTopOf="parent" />-->

                    <!-- ViewPager2 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/headerMenuContentViewPager"
                            android:layout_width="match_parent"
                            android:layout_height="375dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/headerWelcomeUserText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_3"
                            android:textColor="@color/white"
                            android:layout_marginLeft="30dp"
                            android:textStyle="bold"
                            android:layout_marginBottom="20dp"
                            android:text="WELCOME! USERNAME"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toBottomOf="@+id/headerMenuContentViewPager"
                            app:layout_constraintStart_toStartOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- DotsIndicator -->
                    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                        android:id="@+id/headerMenuContentDotsIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        app:dotsColor="@color/Dark2"
                        app:dotsSize="8dp"
                        app:dotsWidthFactor="4"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/headerMenuContentViewPager"
                        app:selectedDotColor="@color/Dark1" />

                </LinearLayout>

<!--                </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>-->


            </androidx.coordinatorlayout.widget.CoordinatorLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>