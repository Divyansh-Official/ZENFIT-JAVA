<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profileSportsButton"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_margin="2.5dp"
                    android:adjustViewBounds="true"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToOutline="true"
                        android:adjustViewBounds="true"
                        android:background="@drawable/profile_different_modes_container_bg"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sports_img_01"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SPORTS"
                        android:textColor="@color/white"
                        android:fontFamily="@font/font_3"
                        android:gravity="center"
                        android:background="@color/Dark1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profileYogaButton"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_margin="2.5dp"
                    android:adjustViewBounds="true"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToOutline="true"
                        android:adjustViewBounds="true"
                        android:background="@drawable/profile_different_modes_container_bg"
                        android:scaleType="centerCrop"
                        android:src="@drawable/yoga_img_01"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="YOGA"
                        android:textColor="@color/white"
                        android:fontFamily="@font/font_3"
                        android:gravity="center"
                        android:background="@color/Dark1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profileDietButton"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_margin="2.5dp"
                    android:adjustViewBounds="true"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToOutline="true"
                        android:adjustViewBounds="true"
                        android:background="@drawable/profile_different_modes_container_bg"
                        android:scaleType="centerCrop"
                        android:src="@drawable/diet_img_01"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DIET"
                        android:textColor="@color/white"
                        android:fontFamily="@font/font_3"
                        android:gravity="center"
                        android:background="@color/Dark1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profileMeditationButton"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_margin="2.5dp"
                    android:adjustViewBounds="true"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToOutline="true"
                        android:adjustViewBounds="true"
                        android:background="@drawable/profile_different_modes_container_bg"
                        android:scaleType="centerCrop"
                        android:src="@drawable/meditation_img_01"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MEDITATION"
                        android:textColor="@color/white"
                        android:fontFamily="@font/font_3"
                        android:gravity="center"
                        android:background="@color/Dark1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>